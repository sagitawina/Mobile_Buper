<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradel"
    tools:context=".Menu.Menu_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/utama"/>

        <EditText
            android:id="@+id/RegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:hint="Email"
            android:textColor="@color/c_white"/>
        <EditText
            android:id="@+id/RegisterNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:hint="Nama"
            android:textColor="@color/c_white"/>
        <EditText
            android:id="@+id/RegisterTelphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:hint="No Telphone"
            android:textColor="@color/c_white"/>
        <EditText
            android:id="@+id/RegisterAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:hint="Alamat"
            android:textColor="@color/c_white"/>
        <EditText
            android:id="@+id/RegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:hint="No Identitas (No KTP/SIM/KK)"
            android:textColor="@color/c_white"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/RegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:inputType="textPassword"
                android:background="@drawable/bg_form"
                android:hint="Password" />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <CheckBox-->
<!--            android:id="@+id/RegisterShowPass"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Show Password"/>-->
<!--        -->
        <Button
            android:id="@+id/RegisterbtnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Register"
            android:background="@drawable/bg_button"/>
        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/brown"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="OR" />
        <Button
            android:id="@+id/RegisterbtnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:background="@drawable/bg_button"/>
    </LinearLayout>
</ScrollView>