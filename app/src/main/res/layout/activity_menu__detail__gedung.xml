<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/c_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Gambarmenudetail"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/scout"
            android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nama_buper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_white"
            android:hint="Nama Buper"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Nama Buper :"
            android:textColor="@color/c_black"
            android:textStyle="normal" />

    </LinearLayout>

     <LinearLayout
        android:id="@+id/formnama_buper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
         android:orientation="horizontal">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="10dp"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:text="Nama Menu"
             android:id="@+id/Nama_gedung"
             android:textColor="@color/c_black"
             android:background="@color/c_white"
             android:textStyle="normal"/>

     </LinearLayout>

    <LinearLayout
        android:id="@+id/twoLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_white"
            android:hint="Alamat"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Alamat :"
            android:textColor="@color/c_black"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/layouttwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Lokasi"
            android:id="@+id/lokasi"
            android:textColor="@color/c_black"
            android:background="@color/c_white"
            android:textStyle="normal"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutthree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_white"
                android:hint="Alamat"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Keterangan :"
                android:textColor="@color/c_black"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layouthree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Lokasi"
                android:id="@+id/keterangan"
                android:textColor="@color/c_black"
                android:background="@color/c_white"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_white"
                android:hint="Nama Fasilitas"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Nama Fasilitas :"
                android:textColor="@color/c_black"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutfour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Nama Fasilitas"
                android:id="@+id/nama_fasilitas"
                android:textColor="@color/c_black"
                android:background="@color/c_white"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_white"
                android:hint="Harga"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Harga :"
                android:textColor="@color/c_black"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutfive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Harga"
                android:id="@+id/Harga_Menu"
                android:textColor="@color/c_black"
                android:background="@color/c_white"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bohongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/bt_datepickerp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Masukan Tanggal Peminjaman"
            android:textColor="@color/brown"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="15-12-2020"
            android:id="@+id/tanggal_peminjaman"
            android:textColor="@color/c_black"
            android:background="@color/c_white"
            android:textStyle="normal"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/bt_datepickerk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Masukan Tanggal Pengembalian"
            android:textColor="@color/brown"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="15-12-2020"
            android:id="@+id/tanggal_pengembalian"
            android:textColor="@color/c_black"
            android:background="@color/c_white"
            android:textStyle="normal"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/tambahkeranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Pinjam"
            android:textColor="@color/brown"
            android:textStyle="bold" />

    </LinearLayout>
