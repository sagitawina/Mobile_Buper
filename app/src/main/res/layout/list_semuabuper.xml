<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:background="@color/mainColor"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:background="@color/mainColor"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imagegedungsemua"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/scout" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="5.0dp"
                    android:textColor="@color/c_black"
                    android:id="@+id/nama_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text="perkemahan"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:textColor="@color/darkblue"-->
<!--                    android:id="@+id/hargagedung"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:ellipsize="end"-->
<!--                    android:gravity="center"-->
<!--                    android:maxLines="1"-->
<!--                    android:padding="5dp"-->
<!--                    android:text="Rp443"-->
<!--                    android:textSize="15dp" />-->
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:background="@drawable/bg_button"
                    android:textColor="@color/darkblue"
                    android:id="@+id/maps_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Detail Lokasi"
                    android:textSize="10dp" />
                <Button
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_button"
                    android:textColor="@color/darkblue"
                    android:id="@+id/lihat_fasilitas"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Lihat Fasilitas"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>