<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">

    <View
        android:id="@+id/line_below_cartShopName"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:background="@color/c_white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nama_keranjangdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="shop name here"
                android:textSize="16sp"
                tools:ignore="UnknownId" />

            <ImageView
                            android:id="@+id/Gambar_keranjang"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/nama_keranjangdetail"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:contentDescription="Product Image"
                            android:scaleType="centerCrop"
                            card_view:srcCompat="@drawable/campsite" />

                        <TextView
                            android:id="@+id/checkoutTxtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/Gambar_keranjang"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/Gambar_keranjang"
                            android:layout_toRightOf="@+id/Gambar_keranjang"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="Harga"
                            android:textColor="@color/c_white"
                            android:textSize="18sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/harga_keranjangdetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkoutTxtTitle"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/Gambar_keranjang"
                            android:layout_toRightOf="@+id/Gambar_keranjang"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/c_white"
                            android:textSize="18sp"
                            android:textStyle="italic" />
                        <TextView
                            android:layout_marginTop="130dp"
                            android:text="status"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="10dp"
                            android:textColor="@color/c_white"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/jenis"/>
            <ImageButton
                android:id="@+id/delChkoutItemBut"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/choco"
                android:contentDescription="Delete Button"
                android:scaleType="fitCenter"
                android:src="@drawable/bucket" />
        </RelativeLayout>
